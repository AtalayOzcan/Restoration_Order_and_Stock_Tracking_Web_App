@model Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models.Order
@using Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models
@{
    ViewData["Title"] = ViewData["Title"]?.ToString();
    var categories = (List<Category>)ViewBag.Categories;
    var isOpen = Model.OrderStatus == "open";
    var minutesOpen = (int)(DateTime.UtcNow - Model.OrderOpenedAt).TotalMinutes;
    var totalPaid = Model.Payments?.Sum(p => p.PaymentsAmount) ?? 0;

    // Kalan = ödenmiş ürünlerin tutarı değil, ödeme kayıtlarının toplamına göre
    var remaining = Model.OrderTotalAmount - totalPaid;

    // Sadece aktif (iptal olmayan) kalemler
    var activeItems = Model.OrderItems.Where(i => i.OrderItemStatus != "cancelled").ToList();

    // Ödenmemiş kalem toplamı (görsel için)
    var unpaidTotal = activeItems.Sum(i => i.UnpaidLineTotal);
    var paidTotal = activeItems.Sum(i => i.PaidLineTotal);

    int StatusOrder(string s) => s switch { "preparing" => 1, "served" => 2, "cancelled" => 99, _ => 0 };
    string StatusClass(string s) => s switch { "preparing" => "s-preparing", "served" => "s-served", "cancelled" => "s-cancelled", _ => "s-pending" };
    string StatusLabel(string s) => s switch { "preparing" => "Hazırlanıyor", "served" => "Servis Edildi", "cancelled" => "İptal", _ => "Bekliyor" };
    string PayMethodLabel(int m) => m switch { 1 => "💳 Kredi Kartı", 2 => "🏦 Banka Kartı", 3 => "🔄 Diğer", _ => "💵 Nakit" };
}

@section Styles {
    <style>
        .detail-layout {
            display: grid;
            grid-template-columns: 1fr 340px;
            gap: 20px;
            align-items: start;
        }

        .left-panel {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        /* ── INFO CARD ── */
        .info-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 14px;
            padding: 18px 20px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(140px,1fr));
            gap: 14px;
        }

        .info-item-label {
            font-size: 10px;
            font-weight: 700;
            letter-spacing: .07em;
            text-transform: uppercase;
            color: var(--text-muted);
            margin-bottom: 4px;
        }

        .info-item-value {
            font-size: 14px;
            font-weight: 600;
        }

            .info-item-value.accent {
                font-family: 'Syne',sans-serif;
                font-size: 20px;
                font-weight: 800;
                color: var(--accent);
            }

        /* ── PANEL ── */
        .panel {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 14px;
            overflow: hidden;
        }

        .panel-head {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 13px 18px;
            border-bottom: 1px solid var(--border);
        }

        .panel-title {
            font-family: 'Syne',sans-serif;
            font-size: 14px;
            font-weight: 700;
        }

        /* ── KALEM SATIRI ── */
        .item-row {
            display: flex;
            align-items: flex-start;
            gap: 10px;
            padding: 12px 16px;
            border-bottom: 1px solid var(--border);
            transition: background .12s;
        }

            .item-row:last-child {
                border-bottom: none;
            }

            .item-row:hover {
                background: var(--surface2);
            }

            /* Kısmen ödenmiş satır — soluk arka plan */
            .item-row.partially-paid {
                background: rgba(34,197,94,.04);
            }

            .item-row.fully-paid {
                background: rgba(34,197,94,.07);
