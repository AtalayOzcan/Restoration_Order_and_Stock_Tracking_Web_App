@section Scripts {
    <script>
        const orderTotal  = @Model.OrderTotalAmount.ToString("F2", System.Globalization.CultureInfo.InvariantCulture);
        const alreadyPaid = @totalPaid.ToString("F2", System.Globalization.CultureInfo.InvariantCulture);
        let currentMethod = 'cash';

        function parseLocalDecimal(str) {
            if (!str) return 0;
            const cleaned = str.trim().replace(/\./g, '').replace(',', '.');
            const val = parseFloat(cleaned);
            return isNaN(val) ? 0 : val;
        }

        // ── Kalem seçim state'i ─────────────────────────────────────────
        // max = RemainingQuantity (sunucu tarafında hesaplandı, data-max-qty'da)
        const iselState = {};
        document.querySelectorAll('.isel-row').forEach(row => {
            const id        = parseInt(row.dataset.itemId);
            const max       = parseInt(row.dataset.maxQty);
            const unitPrice = parseFloat(row.dataset.unitPrice);
            iselState[id]   = { selected: 0, max, unitPrice };
            // max=0 ise zaten all-paid class'ı var
        });

        function toggleItemSelPanel() {
            const body  = document.getElementById('itemSelBody');
            const arrow = document.getElementById('itemSelPanelArrow');
            const open  = body.classList.toggle('open');
            arrow.textContent = open ? '▾' : '▸';
        }

        function iselChange(itemId, delta) {
            const s = iselState[itemId];
            if (!s || s.max === 0) return;
            s.selected = Math.max(0, Math.min(s.max, s.selected + delta));

            const qtyEl = document.getElementById('isel-qty-'   + itemId);
            qtyEl.textContent = s.selected;
            qtyEl.classList.toggle('has-sel', s.selected > 0);

            const sub = s.selected * s.unitPrice;
            document.getElementById('isel-sub-'   + itemId).textContent =
                s.selected > 0 ? '₺' + sub.toFixed(2).replace('.', ',') : '₺0';

            document.getElementById('isel-minus-' + itemId).style.opacity = s.selected === 0     ? '0.3' : '1';
            document.getElementById('isel-plus-'  + itemId).style.opacity = s.selected === s.max ? '0.3' : '1';

            updateIselTotal();
        }

        function updateIselTotal() {
            let total = 0;
            Object.values(iselState).forEach(s => { total += s.selected * s.unitPrice; });
            document.getElementById('iselTotalVal').textContent  = '₺' + total.toFixed(2).replace('.', ',');
            document.getElementById('iselApplyBtn').disabled     = total <= 0;
        }

        function applyItemSelection() {
            let total = 0;
            Object.values(iselState).forEach(s => { total += s.selected * s.unitPrice; });
            if (total <= 0) return;
            document.getElementById('paymentAmountDisplay').value = total.toFixed(2).replace('.', ',');
            updateChange();
            document.getElementById('itemSelBody').classList.remove('open');
            document.getElementById('itemSelPanelArrow').textContent = '▸';
        }

        // Formu gönderirken kalem seçimlerini hidden input olarak ekle
        function buildIselHiddenInputs() {
            const container = document.getElementById('iselHiddenInputs');
            container.innerHTML = '';
            let hasAnySelection = false;
            Object.entries(iselState).forEach(([id, s]) => {
                if (s.selected > 0) {
                    hasAnySelection = true;
                    container.innerHTML +=
                        `<input type="hidden" name="paidItemIds"  value="${id}" />` +
                        `<input type="hidden" name="paidItemQtys" value="${s.selected}" />`;
                }
            });
            return hasAnySelection;
        }

        function syncAndValidatePayment() {
            const payDisplay  = document.getElementById('paymentAmountDisplay').value;
            const discDisplay = document.getElementById('discountAmountDisplay').value;
            const payVal      = parseLocalDecimal(payDisplay);
            const discVal     = parseLocalDecimal(discDisplay);
            const err         = document.getElementById('err-amount');

            if (payVal <= 0) { err.style.display = 'block'; return false; }
            err.style.display = 'none';

            document.getElementById('paymentAmountStr').value  = payVal.toFixed(2);
            document.getElementById('discountAmountStr').value = discVal.toFixed(2);

            buildIselHiddenInputs(); // Kalem seçimlerini hidden input'lara ekle
            return true;
        }

        function openModal(id)  { document.getElementById(id).classList.add('open'); }
        function closeModal(id) { document.getElementById(id).classList.remove('open'); }
        document.querySelectorAll('.modal-overlay').forEach(o => {
            o.addEventListener('click', e => { if (e.target === o) o.classList.remove('open'); });
        });

        function openAddItemModal(id, name, price) {
            document.getElementById('addItemId').value          = id;
            document.getElementById('addItemTitle').textContent = name + ' Ekle';
            document.getElementById('addItemSub').textContent   = '₺' + price.toFixed(2).replace('.', ',') + ' / adet';
            document.getElementById('addItemQty').value         = 1;
            openModal('addItemModal');
        }

        function validateAddItem() {
            const qty = parseInt(document.getElementById('addItemQty').value);
            const err = document.getElementById('err-qty');
            if (isNaN(qty) || qty < 1) { err.style.display = 'block'; return false; }
            err.style.display = 'none'; return true;
        }

        function selectMethod(btn, method) {
            document.querySelectorAll('.method-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            document.getElementById('selectedMethod').value = method;
            currentMethod = method;
            document.getElementById('changeRow').style.display = method === 'cash' ? 'block' : 'none';
            updateChange();
        }

        function updateRemaining() {
            const disc    = parseLocalDecimal(document.getElementById('discountAmountDisplay').value);
            const net     = Math.max(0, orderTotal - disc - alreadyPaid);
            const netFull = Math.max(0, orderTotal - disc);
            document.getElementById('pms-remaining').textContent = '₺' + net.toFixed(2).replace('.', ',');
            const discRow   = document.getElementById('pms-discount-row');
            const discLabel = document.getElementById('discount-label');
            if (disc > 0) {
                discRow.style.display   = 'flex';
                discLabel.style.display = 'inline';
                document.getElementById('pms-discount-val').textContent = '-₺' + disc.toFixed(2).replace('.', ',');
                document.getElementById('net-amount').textContent       = netFull.toFixed(2).replace('.', ',');
            } else {
                discRow.style.display   = 'none';
                discLabel.style.display = 'none';
            }
            updateChange();
        }

        function fillRemaining() {
            const disc = parseLocalDecimal(document.getElementById('discountAmountDisplay').value);
            const rem  = Math.max(0, orderTotal - disc - alreadyPaid);
            document.getElementById('paymentAmountDisplay').value = rem.toFixed(2).replace('.', ',');
            updateChange();
        }

        function updateChange() {
            if (currentMethod !== 'cash') return;
            const disc    = parseLocalDecimal(document.getElementById('discountAmountDisplay').value);
            const rem     = Math.max(0, orderTotal - disc - alreadyPaid);
            const entered = parseLocalDecimal(document.getElementById('paymentAmountDisplay').value);
            const change  = Math.max(0, entered - rem);
            document.getElementById('changeDisplay').textContent = '₺' + change.toFixed(2).replace('.', ',');
        }

        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(a => {
                a.style.transition = 'opacity .5s';
                a.style.opacity    = '0';
                setTimeout(() => a.remove(), 500);
            });
        }, 3000);
    </script>
}
