            display: flex;
            align-items: center;
            gap: 5px;
            margin-top: 5px;
            font-size: 11px;
            flex-wrap: wrap;
        }

        .pay-chip {
            display: inline-flex;
            align-items: center;
            gap: 3px;
            padding: 2px 7px;
            border-radius: 20px;
            font-size: 10px;
            font-weight: 700;
        }

        .pay-chip-paid {
            background: rgba(34,197,94,.12);
            color: #22c55e;
        }

        .pay-chip-remain {
            background: var(--surface2);
            color: var(--text-muted);
            border: 1px solid var(--border);
        }

        .pay-chip-full {
            background: rgba(34,197,94,.15);
            color: #22c55e;
        }

        .item-qty {
            font-size: 12px;
            color: var(--text-muted);
            min-width: 30px;
            text-align: center;
            flex-shrink: 0;
        }

        .item-price-col {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            flex-shrink: 0;
            min-width: 72px;
        }

        .item-price {
            font-family: 'Syne',sans-serif;
            font-size: 14px;
            font-weight: 700;
        }

        .item-price-unpaid {
            font-family: 'Syne',sans-serif;
            font-size: 12px;
            font-weight: 700;
            color: var(--accent);
        }

        .item-price-paid-label {
            font-size: 10px;
            color: #22c55e;
        }

        /* ── STATUS FLOW ── */
        .status-flow {
            display: flex;
            align-items: center;
            gap: 3px;
            flex-shrink: 0;
        }

        .sflow-current {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            padding: 4px 9px;
            border-radius: 20px;
            font-size: 10px;
            font-weight: 700;
            letter-spacing: .04em;
            text-transform: uppercase;
            flex-shrink: 0;
        }

        .sflow-btn {
            padding: 4px 9px;
            border-radius: 7px;
            font-size: 10px;
            font-weight: 700;
            border: 1px solid;
            cursor: pointer;
            background: none;
            font-family: 'DM Sans',sans-serif;
            transition: all .15s;
            white-space: nowrap;
            flex-shrink: 0;
        }

        .sflow-btn-prepare {
            border-color: rgba(234,179,8,.45);
            color: #eab308;
        }

            .sflow-btn-prepare:hover {
                background: rgba(234,179,8,.12);
            }

        .sflow-btn-serve {
            border-color: rgba(34,197,94,.45);
            color: #22c55e;
        }

            .sflow-btn-serve:hover {
                background: rgba(34,197,94,.12);
            }

        .sflow-arrow {
            font-size: 10px;
            color: var(--text-muted);
            margin: 0 2px;
        }

        /* ── STATUS BADGES ── */
        .status-badge {
            display: inline-block;
            font-size: 10px;
            font-weight: 700;
            letter-spacing: .05em;
            text-transform: uppercase;
            padding: 3px 9px;
            border-radius: 20px;
        }

        .s-pending {
            background: var(--surface2);
            color: var(--text-muted);
        }

        .s-preparing {
            background: rgba(234,179,8,.12);
            color: #eab308;
        }

        .s-served {
            background: rgba(34,197,94,.12);
            color: #22c55e;
        }

        .s-cancelled {
            background: rgba(239,68,68,.12);
            color: #ef4444;
        }

        .s-paid {
            background: rgba(34,197,94,.12);
            color: #22c55e;
        }

        .time-badge {
            font-size: 11px;
            background: var(--surface2);
            border: 1px solid var(--border);
            padding: 4px 10px;
            border-radius: 20px;
            color: var(--text-muted);
        }

            .time-badge.hot {
                border-color: rgba(239,68,68,.4);
                color: #f87171;
                background: rgba(239,68,68,.08);
            }

        /* ── ÜRÜN EKLE ── */
        .add-panel-body {
            display: flex;
            flex-direction: column;
            max-height: 400px;
            overflow-y: auto;
        }

        .add-cat-header {
            position: sticky;
            top: 0;
            background: var(--surface);
            padding: 8px 14px 5px;
            display: flex;
            align-items: center;
            gap: 7px;
            z-index: 1;
            border-bottom: 1px solid var(--border);
        }

        .add-cat-stripe {
            width: 3px;
            height: 14px;
            background: var(--accent);
            border-radius: 2px;
            flex-shrink: 0;
        }

        .add-cat-name {
            font-size: 10px;
            font-weight: 800;
            letter-spacing: .1em;
            text-transform: uppercase;
            color: var(--accent);
        }

        .add-items-wrap {
            padding: 6px 10px 8px;
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .add-item-row {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 10px;
            border-radius: 8px;
            border: 1px solid var(--border);
            background: var(--surface2);
            cursor: pointer;
            transition: border-color .12s;
        }

            .add-item-row:hover {
                border-color: var(--accent);
            }

        .ai-name {
            flex: 1;
            font-size: 13px;
            font-weight: 500;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            min-width: 0;
        }

        .ai-price {
            font-size: 12px;
            font-weight: 700;
            color: var(--accent);
            flex-shrink: 0;
            white-space: nowrap;
        }

        .ai-btn {
            width: 24px;
            height: 24px;
            border-radius: 6px;
            background: var(--accent);
            color: #fff;
            border: none;
            font-size: 15px;
            display: grid;
            place-items: center;
            cursor: pointer;
            flex-shrink: 0;
            line-height: 1;
        }

        /* ── SAĞ PANEL — ÖDEME ── */
        .pay-panel {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 14px;
            overflow: hidden;
            position: sticky;
            top: 76px;
        }

        .pay-head {
            padding: 15px 18px;
            border-bottom: 1px solid var(--border);
        }

        .pay-title {
            font-family: 'Syne',sans-serif;
            font-size: 15px;
            font-weight: 700;
        }

        .pay-summary {
            padding: 16px 18px;
            border-bottom: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .pay-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 13px;
        }

        .pay-label {
