            }

        .item-info {
            flex: 1;
            min-width: 0;
        }

        .item-name {
            font-size: 14px;
            font-weight: 500;
        }

        .item-note {
            font-size: 11px;
            color: var(--text-muted);
            margin-top: 2px;
        }

        /* Ödeme durumu satırı */
