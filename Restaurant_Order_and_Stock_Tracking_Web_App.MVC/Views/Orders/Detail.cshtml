            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 14px;
            background: var(--surface2);
            cursor: pointer;
            font-size: 12px;
            font-weight: 700;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: .05em;
            user-select: none;
        }

            .item-sel-head:hover {
                color: var(--text);
            }

        .item-sel-body {
            display: none;
        }

            .item-sel-body.open {
                display: block;
            }

        .isel-row {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 9px 14px;
            border-bottom: 1px solid var(--border);
            font-size: 13px;
        }

            .isel-row:last-child {
                border-bottom: none;
            }

            .isel-row.all-paid {
                opacity: .4;
                pointer-events: none;
            }

        .isel-name {
            flex: 1;
            font-weight: 500;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .isel-price {
            font-size: 12px;
            color: var(--text-muted);
            margin-right: 4px;
        }

        .isel-ctrl {
            display: flex;
            align-items: center;
            gap: 6px;
            flex-shrink: 0;
        }

        .isel-minus, .isel-plus {
            width: 22px;
            height: 22px;
            border-radius: 5px;
            border: 1px solid var(--border);
            background: var(--surface2);
            color: var(--text);
            font-size: 14px;
            display: grid;
            place-items: center;
            cursor: pointer;
            transition: all .12s;
            line-height: 1;
            font-family: monospace;
        }

            .isel-minus:hover {
                border-color: #ef4444;
                color: #ef4444;
                background: rgba(239,68,68,.1);
            }

            .isel-plus:hover {
                border-color: var(--accent);
                color: var(--accent);
                background: var(--accent-glow);
            }

        .isel-qty {
            font-family: 'Syne',sans-serif;
            font-size: 14px;
            font-weight: 700;
            min-width: 24px;
            text-align: center;
        }

            .isel-qty.has-sel {
                color: var(--accent);
            }

        .isel-subtotal {
            font-family: 'Syne',sans-serif;
            font-size: 12px;
            font-weight: 700;
            color: #22c55e;
            min-width: 54px;
            text-align: right;
        }

        .isel-total-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 14px;
            background: var(--surface2);
            border-top: 1px solid var(--border);
            font-size: 13px;
        }

        .isel-total-val {
            font-family: 'Syne',sans-serif;
            font-size: 16px;
            font-weight: 800;
            color: var(--accent);
        }

        .isel-apply-btn {
            padding: 5px 14px;
            border-radius: 7px;
            background: var(--accent);
            color: #fff;
            border: none;
            font-size: 12px;
            font-weight: 700;
            cursor: pointer;
            font-family: 'DM Sans',sans-serif;
            transition: background .15s;
        }

            .isel-apply-btn:hover {
                background: #ea6c0a;
            }

            .isel-apply-btn:disabled {
                background: var(--surface2);
                color: var(--text-muted);
                cursor: not-allowed;
            }

        .pay-modal-summary {
            background: var(--surface2);
            border-radius: 10px;
            padding: 14px;
            margin-bottom: 14px;
        }

        .pms-row {
            display: flex;
            justify-content: space-between;
            font-size: 13px;
            padding: 3px 0;
        }

        .pms-divider {
            height: 1px;
            background: var(--border);
            margin: 8px 0;
        }

        .pms-total {
            font-family: 'Syne',sans-serif;
            font-size: 18px;
            font-weight: 800;
            color: var(--accent);
        }

        .alert {
            padding: 12px 16px;
            border-radius: 10px;
            font-size: 13px;
            border: 1px solid;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .alert-success {
            background: rgba(34,197,94,.1);
            border-color: rgba(34,197,94,.3);
            color: #22c55e;
        }

        .alert-error {
            background: rgba(239,68,68,.1);
            border-color: rgba(239,68,68,.3);
            color: #ef4444;
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            padding: 7px 14px;
            border: 1px solid var(--border);
            border-radius: 8px;
            font-size: 12px;
            color: var(--text-muted);
            transition: all .15s;
        }

            .back-btn:hover {
                color: var(--text);
                border-color: var(--text-muted);
            }

        @@media(max-width:900px) {
            .detail-layout {
                grid-template-columns: 1fr
            }

            .pay-panel {
                position: static
            }
        }

        @@media(max-width:480px) {
            .info-card {
                grid-template-columns: 1fr 1fr
            }

            .status-flow {
                flex-wrap: wrap;
            }
        }
    </style>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">✅ @TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">❌ @TempData["Error"]</div>
}

<div class="page-header">
    <div>
        <h1 class="page-title">@Model.Table?.TableName — Adisyon #@Model.OrderId</h1>
        <p class="page-sub">
            @if (isOpen)
            {
                <span>Açık adisyon · @minutesOpen dakikadır açık</span>
            }
