@model IEnumerable<Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models.MenuItem>
@{
    Layout = null;  // Müşteri sayfası admin layout'u kullanmaz
    var tableName = (string)ViewData["TableName"]!;
    var isWaiterCalled = (bool)ViewData["IsWaiterCalled"]!;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@tableName — Menü</title>
    <style>
        *, *::before, *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', system-ui, sans-serif;
            background: #0f172a;
            color: #e2e8f0;
            min-height: 100dvh;
        }

        /* ── Header ── */
        .qr-header {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            border-bottom: 1px solid #334155;
            padding: 20px 16px 16px;
            text-align: center;
            position: sticky;
            top: 0;
            z-index: 100;
        }

            .qr-header h1 {
                font-size: 1.25rem;
                font-weight: 700;
                color: #f8fafc;
            }

            .qr-header p {
                font-size: 0.8rem;
                color: #94a3b8;
                margin-top: 2px;
            }

        /* ── Garson Çağır Butonu ── */
        .waiter-section {
            padding: 16px;
            display: flex;
            justify-content: center;
        }

        .btn-call-waiter {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: #dc2626;
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 12px 28px;
            font-size: 1rem;
            font-weight: 700;
            cursor: pointer;
            transition: background 0.2s, transform 0.1s, opacity 0.2s;
            box-shadow: 0 4px 16px rgba(220, 38, 38, 0.4);
        }

            .btn-call-waiter:hover {
                background: #b91c1c;
            }

            .btn-call-waiter:active {
                transform: scale(0.96);
            }

            .btn-call-waiter:disabled {
                background: #166534;
                box-shadow: none;
                cursor: not-allowed;
                opacity: 0.85;
            }

        /* ── Menü ── */
        .menu-container {
            padding: 0 12px 80px;
        }

        .category-title {
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: #f97316;
            padding: 20px 4px 8px;
            border-bottom: 1px solid #1e293b;
            margin-bottom: 8px;
        }

        .menu-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 8px;
            border-radius: 10px;
            transition: background 0.15s;
        }

            .menu-item:hover {
                background: #1e293b;
            }

        .item-info {
            flex: 1;
        }

        .item-name {
            font-size: 0.95rem;
            font-weight: 600;
            color: #f1f5f9;
        }

        .item-desc {
            font-size: 0.78rem;
            color: #64748b;
            margin-top: 2px;
        }

        .item-price {
            font-size: 1rem;
            font-weight: 700;
            color: #f97316;
            white-space: nowrap;
            padding-left: 12px;
        }
    </style>
</head>
<body>

    <header class="qr-header">
        <h1>🍽️ @tableName</h1>
        <p>Hoş geldiniz! Aşağıdan menüye göz atabilirsiniz.</p>
    </header>

    <div class="waiter-section">
        <button class="btn-call-waiter"
                id="btnCallWaiter"
                onclick="callWaiter()"
                @(isWaiterCalled ? "disabled" : "")>
            @(isWaiterCalled ? "✅ Garson Çağrıldı" : "🔔 Garson Çağır")
        </button>
    </div>

    <div class="menu-container">
        @{
            string? lastCat = null;
            foreach (var item in Model)
            {
                var catName = item.Category?.CategoryName ?? "Diğer";
                if (catName != lastCat)
                {
                    if (lastCat != null)
                    {
                        <text></text>
                    }
                    <div class="category-title">@catName</div>
                    lastCat = catName;
                }
                <div class="menu-item">
                    <div class="item-info">
                        <div class="item-name">@item.MenuItemName</div>
                        @if (!string.IsNullOrWhiteSpace(item.Description))
                        {
                            <div class="item-desc">@item.Description</div>
                        }
                    </div>
                    <div class="item-price">₺@item.MenuItemPrice.ToString("N2")</div>
                </div>
            }
        }
    </div>

    <script>
        const TABLE_NAME = "@Html.Raw(tableName.Replace("\"", "\\\""))";

        async function callWaiter() {
            const btn = document.getElementById('btnCallWaiter');
            btn.disabled = true;

            try {
                const res  = await fetch('/QrMenu/CallWaiter', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ TableName: TABLE_NAME })
                });
                const data = await res.json();

                if (data.success) {
                    btn.textContent = '✅ Garson Çağrıldı';
                } else {
                    btn.disabled = false;
                    console.error(data.message);
                }
            } catch (err) {
                btn.disabled = false;
                console.error('Bağlantı hatası:', err);
            }
        }
    </script>

</body>
</html>
