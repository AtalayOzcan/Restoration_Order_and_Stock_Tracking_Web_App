@using Microsoft.AspNetCore.Identity
@inject UserManager<Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models.ApplicationUser> UserManager
@inject SignInManager<Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models.ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="tr" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] != null ? ViewData["Title"] + " — RestaurantOS" : "RestaurantOS")</title>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;600;700;800&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    @* ── SIDEBAR ─────────────────────────────────────────── *@
    <aside class="sidebar" id="sidebar">

        <div class="sidebar-logo">
            <div class="logo-icon">🍽️</div>
            <span class="logo-text">RestaurantOS</span>
        </div>

        <nav class="nav-section">

            <span class="nav-label">Ana Menü</span>

            <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")"
               asp-controller="Dashboard" asp-action="Index">
                <span class="nav-icon">📊</span>
                <span class="nav-text">Dashboard</span>
            </a>

            <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tables" ? "active" : "")"
               asp-controller="Tables" asp-action="Index">
                <span class="nav-icon">🪑</span>
                <span class="nav-text">Masalar</span>
                @if (ViewData["OccupiedCount"] is int oc && oc > 0)
                {
                    <span class="badge">@oc</span>
                }
            </a>

            <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")"
               asp-controller="Orders" asp-action="Index">
                <span class="nav-icon">🧾</span>
                <span class="nav-text">Siparişler</span>
                @if (ViewData["ActiveOrderCount"] is int ao && ao > 0)
                {
                    <span class="badge">@ao</span>
                }
            </a>

            <span class="nav-label">Yönetim</span>

            @if (User.IsInRole("Admin"))
            {
                <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "active" : "")"
                   asp-controller="User" asp-action="Index">
                    <span class="nav-icon">👥</span>
                    <span class="nav-text">Kullanıcılar</span>
                </a>
            }

            <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Menu" ? "active" : "")"
               asp-controller="Menu" asp-action="Index">
                <span class="nav-icon">🍕</span>
                <span class="nav-text">Menü</span>
            </a>
            <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")"
               asp-controller="Category" asp-action="Index">
                <span class="nav-icon">🍕</span>
                <span class="nav-text">Kategori</span>
            </a>

            <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Stock" ? "active" : "")"
               asp-controller="Stock" asp-action="Index">
                <span class="nav-icon">📦</span>
                <span class="nav-text">Stok</span>
            </a>

            <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")"
               asp-controller="Reports" asp-action="Index">
                <span class="nav-icon">📈</span>
                <span class="nav-text">Raporlar</span>
            </a>

            <span class="nav-label">Sistem</span>

            <a class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")"
               asp-controller="Settings" asp-action="Index">
                <span class="nav-icon">⚙️</span>
                <span class="nav-text">Ayarlar</span>
            </a>

        </nav>

        <div class="sidebar-footer">
            @{
                var currentUser = SignInManager.IsSignedIn(User)
                    ? await UserManager.GetUserAsync(User)
                    : null;
                var displayName = currentUser?.FullName?.Trim();
                if (string.IsNullOrEmpty(displayName)) displayName = currentUser?.UserName ?? "Kullanıcı";
                var userInitial = displayName.Length > 0 ? displayName[0].ToString().ToUpper() : "?";
                var userRole = User.IsInRole("Admin") ? "Yönetici" : "Garson";
            }
            <div class="avatar">@userInitial</div>
            <div class="avatar-info">
                <div class="avatar-name">@displayName</div>
                <div class="avatar-role">@userRole</div>
            </div>
            <form asp-controller="Auth" asp-action="Logout" method="post" style="margin:0">
                @Html.AntiForgeryToken()
                <button type="submit" title="Çıkış Yap" style="background:none;border:none;cursor:pointer;color:var(--text-muted);font-size:1.1rem;padding:4px;">
                    🚪
                </button>
            </form>
        </div>

    </aside>

    @* ── MAIN ─────────────────────────────────────────────── *@
    <div class="main" id="main">

        <header class="topbar">
            <button class="topbar-toggle" id="toggleBtn">☰</button>

            <div class="topbar-breadcrumb">
                RestaurantOS › <span>@(ViewData["Title"] ?? "Dashboard")</span>
            </div>

            <div class="topbar-right">
                <div class="topbar-clock" id="clock">--:--</div>

                <button class="notif-btn" title="Bildirimler">
                    🔔
                    @if (ViewData["HasLowStock"] is bool low && low)
                    {
                        <span class="notif-dot"></span>
                    }
                </button>

                <div class="theme-toggle" id="themeToggle"></div>
            </div>
        </header>

        <main class="content">
            @RenderBody()
        </main>

    </div>

    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
