@model IEnumerable<Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models.MenuItem>

@using Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models

@{
    ViewData["Title"] = "Stok Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categories = ViewData["Categories"] as List<Category> ?? new List<Category>();
    var sparklineMap = ViewData["SparklineMap"] as Dictionary<int, List<int>> ?? new Dictionary<int, List<int>>();
    var lastUpdatedMap = ViewData["LastUpdatedMap"] as Dictionary<int, DateTime> ?? new Dictionary<int, DateTime>();

    int totalProducts = (int)(ViewData["TotalProducts"] ?? 0);
    int trackedProducts = (int)(ViewData["TrackedProducts"] ?? 0);
    int lowStockCount = (int)(ViewData["LowStockCount"] ?? 0);
    int criticalCount = (int)(ViewData["CriticalCount"] ?? 0);
    bool hasAlert = (bool)(ViewData["HasAlert"] ?? false);
    bool showAll = ViewData["ShowAll"] is true;

    Func<MenuItem, string> getStatus = m =>
    {
        if (!m.TrackStock) return "NotTracked";
        if (m.AlertThreshold > 0 && m.StockQuantity <= (int)(m.AlertThreshold * 0.5)) return "Critical";
        if (m.AlertThreshold > 0 && m.StockQuantity <= m.AlertThreshold) return "Low";
        return "OK";
    };

    Func<string, string> getPillClass = s => s switch
    {
        "Critical" => "pill-red",
        "Low" => "pill-amber",
        "NotTracked" => "pill-gray",
        _ => "pill-green"
    };

    Func<string, string> getStatusLabel = s => s switch
    {
        "Critical" => "🚨 Kritik",
        "Low" => "⚡ Düşük",
        "NotTracked" => "— Takip Dışı",
        _ => "✓ Yeterli"
    };

    var grouped = Model
        .GroupBy(m => m.Category)
        .OrderBy(g => g.Key?.CategorySortOrder)
        .ThenBy(g => g.Key?.CategoryName);
}

@section Styles {
    <link href="~/css/Views/Stock/Index.css" rel="stylesheet" asp-append-version="true" />
}

<!-- ══════════════════════════════════════════════════
     SAYFA BAŞLIĞI
══════════════════════════════════════════════════ -->
<div class="page-header">
    <div>
        <h1 class="page-title">📦 Stok Yönetimi</h1>
        @if (showAll)
        {
            <div class="page-subtitle">Tüm @Model.Count() ürün gösteriliyor · @trackedProducts takipte</div>
        }
        else
        {
            <div class="page-subtitle">@trackedProducts takipte olan ürün gösteriliyor · Toplam @totalProducts ürünün @(totalProducts - trackedProducts) adedi takip dışı</div>
        }
    </div>
</div>

<!-- ══════════════════════════════════════════════════
     UYARI BANNERI
══════════════════════════════════════════════════ -->
@if (hasAlert)
{
    <div class="alert-banner">
        <span style="font-size:1.5rem;">⚠️</span>
        <div class="alert-banner-text">
            <strong>Stok Uyarısı Dikkatinizi Bekliyor!</strong>
            <span>
                @if (criticalCount > 0)
                {
                    <text>@criticalCount kritik seviyede,&nbsp;</text>
                }
                @if (lowStockCount > 0)
                {
                    <text>@lowStockCount düşük seviyede ürün bulunuyor.</text>
                }
            </span>
        </div>
    </div>
}

<!-- ══════════════════════════════════════════════════
     İSTATİSTİK KARTLARI
══════════════════════════════════════════════════ -->
<div class="stat-grid">
    <div class="stat-card stat-accent">
        <div class="stat-icon">📦</div>
        <div>
            <div class="stat-value">@totalProducts</div>
            <div class="stat-label">Toplam Ürün</div>
        </div>
    </div>
    <div class="stat-card stat-green">
        <div class="stat-icon">📊</div>
        <div>
            <div class="stat-value">@trackedProducts</div>
            <div class="stat-label">Stok İzlenen</div>
        </div>
    </div>
    <div class="stat-card stat-amber">
        <div class="stat-icon">⚡</div>
        <div>
            <div class="stat-value">@lowStockCount</div>
            <div class="stat-label">Düşük Stok</div>
        </div>
    </div>
    <div class="stat-card stat-red">
        <div class="stat-icon">🚨</div>
        <div>
            <div class="stat-value">@criticalCount</div>
            <div class="stat-label">Kritik Stok</div>
        </div>
    </div>
</div>

<!-- ══════════════════════════════════════════════════
     FİLTRE BARI
══════════════════════════════════════════════════ -->
<div class="filter-bar">
    <input type="text"
           id="searchInput"
           class="filter-input wide"
           placeholder="🔍 Ürün adı veya SKU ara…"
           oninput="StockFilter.apply()" />

    <select id="catFilter" class="filter-input" onchange="StockFilter.apply()" ">
        <option value="">Tüm Kategoriler</option>
        @foreach (var cat in categories)
        {
            <option value="@cat.CategoryName">@cat.CategoryName</option>
        }
    </select>

    <select id="statusFilter" class="filter-input" onchange="StockFilter.apply()" ">
        <option value="">Tüm Durumlar</option>
        <option value="OK">✓ Yeterli</option>
        <option value="Low">⚡ Düşük</option>
        <option value="Critical">🚨 Kritik</option>
        <option value="NotTracked">— Takip Dışı</option>
    </select>

    <div class="filter-spacer"></div>

    @* ── Takip Dışı Göster / Gizle ── *@
    @if (showAll)
    {
        <a href="/Stock" class="btn btn-toggle-all btn-sm">
            👁 Takip Dışı Ürünleri de Göster
        </a>
    }
    else
    {
        <a href="/Stock?showAll=true" class="btn btn-toggle-all btn-sm">
             📊 Yalnızca Takiptekileri Göster
        </a>
    }

    <button class="btn btn-csv" onclick="StockCsv.export()">
        <svg style="width:16px;height:16px;fill:currentColor" viewBox="0 0 24 24">
            <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" />
        </svg>
        CSV İndir
    </button>
</div>

<!-- ══════════════════════════════════════════════════
     AKORDEONLİ KATEGORİ TABLOLARI
══════════════════════════════════════════════════ -->
<div class="acc-wrapper" id="accWrapper">

    @if (!Model.Any())
    {
        <div class="acc-block">
            <div style="text-align:center; padding:3rem; color:var(--text-muted);">
                <div style="font-size:3rem; margin-bottom:1rem; opacity:0.5;">📭</div>
                <div>
                    @(showAll
                                    ? "Henüz ürün eklenmemiş."
                                    : "Stok takibi aktif ürün bulunmuyor. Takip dışı ürünleri görmek için '👁 Takip Dışı Ürünleri de Göster' butonunu kullanın.")
                </div>
            </div>
        </div>
    }

    @foreach (var grp in grouped)
    {
        var grpItems = grp.ToList();
        var grpLow = grpItems.Count(m => getStatus(m) == "Low");
        var grpCritical = grpItems.Count(m => getStatus(m) == "Critical");
        var catName = grp.Key?.CategoryName ?? "Kategorisiz";

        <div class="acc-block open" data-cat-name="@catName">
            <div class="acc-header" onclick="StockAccordion.toggle(this)">
                <span class="acc-title">@catName</span>
                <div class="acc-meta">
                    <span class="pill pill-indigo">@grpItems.Count ürün</span>
                    @if (grpLow > 0)
                    {
                        <span class="pill pill-amber">@grpLow düşük</span>
                    }
                    @if (grpCritical > 0)
                    {
                        <span class="pill pill-red">@grpCritical kritik</span>
                    }
                </div>
                <span class="acc-chevron">▼</span>
            </div>

            <div class="acc-body">
                <table class="ros-table">
                    <thead>
                        <tr>
                            <th>Ürün / SKU</th>
                            <th>Güncel Stok</th>
                            <th>Uyarı Eşiği</th>
                            <th>Durum</th>
                            <th>Trend</th>
                            <th>Son Güncelleme</th>
                            <th style="text-align:center;">Takip</th>
                            <th style="text-align:right;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in grpItems)
                        {
                            var st = getStatus(item);
                            var pill = getPillClass(st);
                            var stLabel = getStatusLabel(st);
                            var sku = $"SKU-{item.MenuItemId:D4}";
                            var spark = sparklineMap.TryGetValue(item.MenuItemId, out var sv) ? sv : new List<int> { item.StockQuantity };
                            var lastUpd = lastUpdatedMap.TryGetValue(item.MenuItemId, out var lu) ? lu : item.MenuItemCreatedTime;
                            var sparkJson = System.Text.Json.JsonSerializer.Serialize(spark);

                            <tr class="stock-row"
                                data-id="@item.MenuItemId"
                                data-name="@item.MenuItemName.ToLower()"
                                data-sku="@sku.ToLower()"
                                data-cat="@catName"
                                data-status="@st">

                                <td>
                                    <div style="font-weight:600; font-size:0.95rem;">@item.MenuItemName</div>
                                    <div style="font-size:0.75rem; color:var(--text-muted); margin-top:0.2rem;">@sku</div>
                                </td>
                                <td>
                                    <strong id="qty-@item.MenuItemId" style="font-size:1.1rem;">@item.StockQuantity</strong>
                                </td>
                                <td style="color:var(--text-muted);">
                                    <span id="thresh-@item.MenuItemId">@item.AlertThreshold</span>
                                </td>
                                <td>
                                    <span id="status-@item.MenuItemId" class="pill @pill">@stLabel</span>
                                </td>
                                <td>
                                    <canvas class="sparkline" width="80" height="30"
                                            data-vals="@sparkJson"
                                            title="Son 5 hareket trendi"></canvas>
                                </td>
                                <td style="font-size:0.8rem; color:var(--text-muted);">
                                    @lastUpd.ToString("dd.MM.yy HH:mm")
                                </td>
                                <td style="text-align:center;">
                                    <label class="toggle-switch" title="@(item.TrackStock ? "Takip açık" : "Takip kapalı")">
                                        <input type="checkbox" class="track-toggle"
                                               data-id="@item.MenuItemId"
                                               @(item.TrackStock ? "checked" : "") />
                                        <span class="toggle-slider"></span>
                                    </label>
                                </td>
                                <td style="text-align:right;">
                                    <div style="display:flex; gap:0.5rem; justify-content:flex-end;">
                                        <button class="btn btn-edit btn-sm"
                                                onclick="StockUpdateModal.open(@item.MenuItemId, '@Html.Raw(item.MenuItemName.Replace("\\", "\\\\").Replace("'", "\\'"))', '@sku', @item.StockQuantity, @item.AlertThreshold)">
                                            ✏️ Güncelle
                                        </button>
                                        <button class="btn btn-detail btn-sm"
                                                onclick="StockHistoryModal.open(@item.MenuItemId)">
                                            📋 Geçmiş
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<!-- ══════════════════════════════════════════════════
     GÜNCELLEME MODALI
══════════════════════════════════════════════════ -->
<div class="modal-overlay" id="updateModal">
    <div class="modal">
        <div class="modal-header">
            <div>
                <h2 class="modal-title" id="upd_title">Stok Güncelle</h2>
                <div style="font-size:0.85rem; color:var(--text-muted); margin-top:0.3rem;" id="upd_sku">—</div>
            </div>
            <button type="button" class="modal-close" onclick="closeModal('updateModal')">✕</button>
        </div>

        <form id="updateForm">
            @Html.AntiForgeryToken()
            <input type="hidden" id="upd_id" />

            <div class="tab-row">
                <button type="button" class="tab-btn active" onclick="StockUpdateModal.switchTab('direct', this)">🔢 Direkt Giriş</button>
                <button type="button" class="tab-btn" onclick="StockUpdateModal.switchTab('movement', this)">↕️ Hareket Bazlı</button>
            </div>

            <!-- Direkt Giriş -->
            <div class="tab-panel active" id="tab-direct">
                <div class="form-group">
                    <label class="form-label">Yeni Stok Miktarı (Sayım Düzeltmesi)</label>
                    <input type="number" id="upd_direct" class="form-control" min="0" placeholder="0" />
                    <div style="font-size:0.8rem; color:var(--text-muted); margin-top:0.4rem;">
                        Mevcut stok doğrudan bu değere ayarlanır.
                    </div>
                </div>
            </div>

            <!-- Hareket Bazlı -->
            <div class="tab-panel" id="tab-movement">
                <div class="form-group">
                    <label class="form-label">Hareket Yönü</label>
                    <div class="direction-row">
                        <button type="button" id="dir-in" class="dir-btn active-in" onclick="StockUpdateModal.setDirection('in')">+ Giriş</button>
                        <button type="button" id="dir-out" class="dir-btn" onclick="StockUpdateModal.setDirection('out')">− Çıkış</button>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Miktar</label>
                    <input type="number" id="upd_qty" class="form-control" min="1" placeholder="1" />
                </div>
                <div class="form-group">
                    <label class="form-label">Açıklama / Not <span style="color:#ef4444;">*</span></label>
                    <input type="text" id="upd_note" class="form-control" placeholder="Örn: Toptancıdan geldi" maxlength="300" />
                </div>
            </div>

            <!-- Uyarı Eşiği -->
            <div style="border-top:1px solid var(--border); padding-top:1.25rem; margin-top:1rem;">
                <div class="form-group" style="margin-bottom:0;">
                    <label class="form-label">
                        ⚙️ Uyarı Eşiği
                        <span style="font-weight:normal; color:var(--text-muted);">(boş bırakılırsa değişmez)</span>
                    </label>
                    <input type="number" id="upd_threshold" class="form-control" min="0" placeholder="Örn: 10" />
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-ghost" onclick="closeModal('updateModal')">İptal</button>
                <button type="submit" class="btn btn-primary">💾 Kaydet</button>
            </div>
        </form>
    </div>
</div>

<!-- ══════════════════════════════════════════════════
     GEÇMİŞ MODALI
══════════════════════════════════════════════════ -->
<div class="modal-overlay" id="historyModal">
    <div class="modal modal-wide">
        <div class="modal-header">
            <div>
                <h2 class="modal-title" id="hist_title">Stok Geçmişi</h2>
                <div style="font-size:0.85rem; color:var(--text-muted); margin-top:0.3rem;" id="hist_sku">—</div>
            </div>
            <button type="button" class="modal-close" onclick="closeModal('historyModal')">✕</button>
        </div>
        <div id="hist_body">
            <div style="text-align:center; padding:2rem; color:var(--text-muted);">Yükleniyor…</div>
        </div>
    </div>
</div>

<!-- Toast container -->
<div id="toastContainer" style="position:fixed; bottom:20px; right:20px; z-index:9999; display:flex; flex-direction:column; gap:10px;"></div>

@section Scripts {
    <script src="~/js/Views/Stock/Index.js" asp-append-version="true"></script>
}
