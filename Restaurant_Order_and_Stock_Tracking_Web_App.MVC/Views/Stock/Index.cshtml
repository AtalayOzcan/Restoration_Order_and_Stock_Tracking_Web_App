@model IEnumerable<Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models.MenuItem>
@using Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models
@{
    ViewData["Title"] = "Stok Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categories = ViewData["Categories"] as List<Category> ?? new();
    var sparklineMap = ViewData["SparklineMap"] as Dictionary<int, List<int>> ?? new();
    var lastUpdatedMap = ViewData["LastUpdatedMap"] as Dictionary<int, DateTime> ?? new();
    var consumedMap = ViewData["ConsumedMap"] as Dictionary<int, int> ?? new();

    int totalProducts = (int)(ViewData["TotalProducts"] ?? 0);
    int trackedProducts = (int)(ViewData["TrackedProducts"] ?? 0);
    int lowStockCount = (int)(ViewData["LowStockCount"] ?? 0);
    int criticalCount = (int)(ViewData["CriticalCount"] ?? 0);
    bool hasAlert = (bool)(ViewData["HasAlert"] ?? false);
    bool showAll = (bool)(ViewData["ShowAll"] ?? false);

    // Madde 3: İkili eşik mantığı — CriticalThreshold kullanır
    Func<MenuItem, string> getStatus = m =>
    {
        if (!m.TrackStock) return "NotTracked";
        if (m.CriticalThreshold > 0 && m.StockQuantity <= m.CriticalThreshold) return "Critical";
        if (m.AlertThreshold > 0 && m.StockQuantity <= m.AlertThreshold) return "Low";
        return "OK";
    };
    Func<string, string> getPillClass = s => s switch
    {
        "Critical" => "pill-red",
        "Low" => "pill-amber",
        "NotTracked" => "pill-gray",
        _ => "pill-green"
    };
    Func<string, string> getStatusLabel = s => s switch
    {
        "Critical" => "🚨 Kritik",
        "Low" => "⚡ Düşük",
        "NotTracked" => "— Takip Dışı",
        _ => "✓ Yeterli"
    };

    var grouped = Model
        .GroupBy(m => m.Category)
        .OrderBy(g => g.Key?.CategorySortOrder)
        .ThenBy(g => g.Key?.CategoryName);
}

@section Styles {
    <style>
        :root {
            --surface: #1e2130;
            --surface-hover: #262a3d;
            --border: rgba(255,255,255,0.08);
            --text-main: #f8fafc;
            --text-muted: #94a3b8;
            --accent: #6366f1;
            --shadow: 0 10px 15px -3px rgba(0,0,0,0.3);
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-main);
            margin-bottom: 0.25rem;
        }

        .page-subtitle {
            font-size: 0.9rem;
            color: var(--text-muted);
            margin-bottom: 2rem;
            font-weight: 500;
        }

        /* ── Stat cards ────────────────────────────────────────────── */
        .stat-grid {
            display: grid;
            grid-template-columns: repeat(4,1fr);
            gap: 1.25rem;
            margin-bottom: 2rem;
        }

        @@media(max-width:900px) {
            .stat-grid {
                grid-template-columns: repeat(2,1fr);
            }
        }

        @@media(max-width:520px) {
            .stat-grid {
                grid-template-columns: 1fr;
            }
        }

        .stat-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1.25rem;
            transition: transform .2s, box-shadow .2s;
        }

            .stat-card:hover {
                transform: translateY(-3px);
                box-shadow: var(--shadow);
                border-color: rgba(255,255,255,.15);
            }

        .stat-icon {
            font-size: 2.2rem;
            width: 3.5rem;
            text-align: center;
        }

        .stat-value {
            font-size: 2.2rem;
            font-weight: 800;
            line-height: 1;
            color: var(--text-main);
        }

        .stat-label {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 0.3rem;
            font-weight: 500;
        }

        /* Madde 4: alt açıklama satırı */
        .stat-sublabel {
            font-size: 0.75rem;
            color: var(--text-muted);
            margin-top: 0.2rem;
            opacity: .7;
        }

        .stat-accent .stat-icon {
            text-shadow: 0 0 15px rgba(99,102,241,.4);
        }

        .stat-green .stat-icon {
            text-shadow: 0 0 15px rgba(16,185,129,.4);
        }

        .stat-amber .stat-icon {
            text-shadow: 0 0 15px rgba(245,158,11,.4);
        }

        .stat-red .stat-icon {
            text-shadow: 0 0 15px rgba(239,68,68,.4);
        }

        /* ── Alert banner ──────────────────────────────────────────── */
        .alert-banner {
            display: flex;
            align-items: center;
            gap: 1rem;
            background: rgba(239,68,68,.1);
            border: 1px solid rgba(239,68,68,.3);
            border-left: 4px solid #ef4444;
            border-radius: 12px;
            padding: 1rem 1.5rem;
            margin-bottom: 2rem;
        }

        .alert-banner-text strong {
            display: block;
            font-size: 1rem;
            color: #fecaca;
            font-weight: 700;
        }

        .alert-banner-text span {
            font-size: 0.85rem;
            color: #fca5a5;
        }

        /* ── Filter bar ────────────────────────────────────────────── */
        .filter-bar {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
            margin-bottom: 1.5rem;
            align-items: center;
        }

        .filter-input {
            padding: 0.6rem 1rem;
            border-radius: 10px;
            border: 1px solid var(--border);
            background: rgba(0,0,0,.2);
            color: var(--text-main);
            font-size: 0.9rem;
            outline: none;
            transition: all .2s;
        }

            .filter-input:focus {
                border-color: var(--accent);
                box-shadow: 0 0 0 2px rgba(99,102,241,.2);
            }

            .filter-input.wide {
                min-width: 250px;
                flex: 1;
            }

        .filter-spacer {
            flex: 1;
        }

        /* ── Buttons ───────────────────────────────────────────────── */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.4rem;
            padding: 0.6rem 1.2rem;
            border-radius: 10px;
            border: none;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: all .2s;
        }

        .btn-sm {
            padding: 0.4rem 0.8rem;
            font-size: 0.8rem;
            border-radius: 8px;
        }

        .btn-primary {
            background: var(--accent);
            color: #fff;
        }

            .btn-primary:hover {
                background: #4f46e5;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(99,102,241,.3);
            }

        .btn-ghost {
            background: transparent;
            color: var(--text-muted);
            border: 1px solid transparent;
        }

            .btn-ghost:hover {
                background: rgba(255,255,255,.05);
                color: var(--text-main);
                border-color: var(--border);
            }

        .btn-edit {
            background: rgba(99,102,241,.1);
            color: #818cf8;
            border: 1px solid rgba(99,102,241,.2);
        }

            .btn-edit:hover {
                background: rgba(99,102,241,.2);
                color: #fff;
            }

        .btn-detail {
            background: rgba(107,114,128,.1);
            color: #9ca3af;
            border: 1px solid rgba(107,114,128,.2);
        }

            .btn-detail:hover {
                background: rgba(107,114,128,.2);
                color: #fff;
            }

        .btn-csv {
            background: rgba(16,185,129,.1);
            color: #10b981;
            border: 1px solid rgba(16,185,129,.2);
        }

            .btn-csv:hover {
                background: rgba(16,185,129,.2);
                color: #34d399;
            }

        .btn-toggle-all {
            background: rgba(99,102,241,.08);
            color: #818cf8;
            border: 1px solid rgba(99,102,241,.2);
        }

            .btn-toggle-all:hover {
                background: rgba(99,102,241,.18);
                color: #fff;
            }

        /* ── Accordion ─────────────────────────────────────────────── */
        .acc-wrapper {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .acc-block {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 12px;
            overflow: hidden;
        }

        .acc-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem 1.5rem;
            cursor: pointer;
            user-select: none;
            transition: background .2s;
            background: rgba(0,0,0,.1);
        }

            .acc-header:hover {
                background: var(--surface-hover);
            }

        .acc-title {
            font-weight: 700;
            font-size: 1rem;
            color: var(--text-main);
        }

        .acc-meta {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        .acc-chevron {
            margin-left: auto;
            font-size: 0.8rem;
            color: var(--text-muted);
            transition: transform .3s;
        }

        .acc-block.open .acc-chevron {
            transform: rotate(180deg);
        }

        .acc-body {
            display: none;
            padding: 0;
        }

        .acc-block.open .acc-body {
            display: block;
        }

        /* Madde 2: Sağlık özeti pill */
        .acc-health {
            font-size: 0.72rem;
            font-weight: 600;
            padding: 0.15rem 0.55rem;
            border-radius: 20px;
        }

        .health-ok {
            background: rgba(16,185,129,.12);
            color: #34d399;
        }

        .health-warn {
            background: rgba(245,158,11,.12);
            color: #fbbf24;
        }

        .health-critical {
            background: rgba(239,68,68,.12);
            color: #f87171;
        }

        /* ── Table ─────────────────────────────────────────────────── */
        .ros-table {
            width: 100%;
            border-collapse: collapse;
            text-align: left;
            font-size: 0.9rem;
        }

            .ros-table th {
                padding: 1rem 1.5rem;
                color: var(--text-muted);
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                font-weight: 600;
                border-bottom: 1px solid var(--border);
                background: rgba(0,0,0,.2);
            }

            .ros-table td {
                padding: 1rem 1.5rem;
                border-bottom: 1px solid var(--border);
                color: var(--text-main);
                vertical-align: middle;
            }

            .ros-table tr:hover td {
                background: rgba(255,255,255,.02);
            }

            .ros-table tr:last-child td {
                border-bottom: none;
            }

        /* Madde 2: SKU Tooltip */
        .sku-th {
            position: relative;
            cursor: help;
        }

            .sku-th::after {
                content: attr(data-tooltip);
                position: absolute;
                top: calc(100% + 6px);
                left: 50%;
                transform: translateX(-50%);
                background: #1a1e2e;
                color: #e2e8f0;
                border: 1px solid rgba(255,255,255,.12);
                border-radius: 8px;
                padding: 0.45rem 0.75rem;
                font-size: 0.75rem;
                font-weight: 500;
                white-space: nowrap;
                opacity: 0;
                pointer-events: none;
                transition: opacity .18s ease, transform .18s ease;
                transform: translateX(-50%) translateY(4px);
                box-shadow: 0 8px 20px rgba(0,0,0,.4);
                z-index: 100;
            }

            .sku-th:hover::after {
                opacity: 1;
                transform: translateX(-50%) translateY(0);
            }

        /* ── Pills ─────────────────────────────────────────────────── */
        .pill {
            padding: 0.25rem 0.6rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-block;
        }

        .pill-green {
            background: rgba(16,185,129,.15);
            color: #34d399;
        }

        .pill-amber {
            background: rgba(245,158,11,.15);
            color: #fbbf24;
        }

        .pill-red {
            background: rgba(239,68,68,.15);
            color: #f87171;
        }

        .pill-indigo {
            background: rgba(99,102,241,.15);
            color: #818cf8;
        }

        .pill-gray {
            background: rgba(107,114,128,.15);
            color: #9ca3af;
        }

        /* ── Toggle Switch ─────────────────────────────────────────── */
        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 22px;
        }

            .toggle-switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(255,255,255,.1);
            transition: .3s;
            border-radius: 22px;
        }

            .toggle-slider:before {
                position: absolute;
                content: "";
                height: 16px;
                width: 16px;
                left: 3px;
                bottom: 3px;
                background-color: #9ca3af;
                transition: .3s;
                border-radius: 50%;
            }

        .toggle-switch input:checked + .toggle-slider {
            background-color: rgba(16,185,129,.2);
        }

            .toggle-switch input:checked + .toggle-slider:before {
                transform: translateX(18px);
                background-color: #34d399;
            }

        /* ── Modals ────────────────────────────────────────────────── */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,.7);
            backdrop-filter: blur(5px);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity .3s ease;
            z-index: 1000;
        }

            .modal-overlay.open {
                opacity: 1;
                pointer-events: auto;
            }

        .modal {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 16px;
            width: 100%;
            max-width: 450px;
            padding: 1.5rem;
            transform: translateY(20px);
            transition: transform .3s ease;
            box-shadow: 0 25px 50px -12px rgba(0,0,0,.5);
        }

        .modal-wide {
            max-width: 720px;
        }

        .modal-overlay.open .modal {
            transform: translateY(0);
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid var(--border);
            padding-bottom: 1rem;
        }

        .modal-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-main);
            margin: 0;
        }

        .modal-close {
            background: none;
            border: none;
            color: var(--text-muted);
            font-size: 1.2rem;
            cursor: pointer;
            transition: color .2s;
        }

            .modal-close:hover {
                color: #f87171;
            }

        .modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 0.75rem;
            margin-top: 1.5rem;
            border-top: 1px solid var(--border);
            padding-top: 1rem;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--text-muted);
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            font-size: 0.95rem;
            background: rgba(0,0,0,.2);
            border: 1px solid var(--border);
            color: var(--text-main);
            transition: border-color .2s;
            box-sizing: border-box;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--accent);
            }

        /* Madde 3: İkili eşik hint */
        .threshold-hint {
            font-size: 0.76rem;
            color: var(--text-muted);
            margin-top: 0.4rem;
            line-height: 1.4;
        }

        .threshold-row {
            display: flex;
            gap: 0.75rem;
        }

            .threshold-row .form-group {
                flex: 1;
                margin-bottom: 0;
            }

        .tab-row {
            display: flex;
            gap: 0.5rem;
            background: rgba(0,0,0,.2);
            padding: 0.35rem;
            border-radius: 10px;
            margin-bottom: 1.25rem;
        }

        .tab-btn {
            flex: 1;
            padding: 0.6rem;
            background: transparent;
            border: none;
            color: var(--text-muted);
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all .2s;
        }

            .tab-btn.active {
                background: var(--accent);
                color: #fff;
                box-shadow: 0 2px 8px rgba(99,102,241,.3);
            }

        .tab-panel {
            display: none;
        }

            .tab-panel.active {
                display: block;
                animation: fadeIn .3s ease;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(5px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .direction-row {
            display: flex;
            gap: 0.5rem;
        }

        .dir-btn {
            flex: 1;
            padding: 0.75rem;
            border-radius: 8px;
            border: 1px solid var(--border);
            background: transparent;
            color: var(--text-muted);
            font-weight: 600;
            cursor: pointer;
            transition: all .2s;
        }

            .dir-btn.active-in {
                background: rgba(16,185,129,.1);
                border-color: rgba(16,185,129,.3);
                color: #34d399;
            }

            .dir-btn.active-out {
                background: rgba(239,68,68,.1);
                border-color: rgba(239,68,68,.3);
                color: #f87171;
            }

        .row-hidden {
            display: none !important;
        }

        canvas.sparkline {
            display: inline-block;
            vertical-align: middle;
        }

        /* ── Toast ─────────────────────────────────────────────────── */
        .toast {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 10px;
            padding: 0.75rem 1.25rem;
            color: var(--text-main);
            font-size: 0.9rem;
            box-shadow: 0 8px 24px rgba(0,0,0,.4);
            animation: fadeIn .25s ease;
        }
    </style>
}

<div class="page-header">
    <div>
        <h1 class="page-title">📦 Stok Yönetimi</h1>
        @if (showAll)
        {
            <div class="page-subtitle">Tüm @Model.Count() ürün gösteriliyor · @trackedProducts takipte</div>
        }
        else
        {
            <div class="page-subtitle">@trackedProducts takipte olan ürün gösteriliyor · Toplam @totalProducts ürünün @(totalProducts - trackedProducts) adedi takip dışı</div>
        }
    </div>
</div>

@if (hasAlert)
{
    <div class="alert-banner">
        <span style="font-size:1.5rem;">⚠️</span>
        <div class="alert-banner-text">
            <strong>Stok Uyarısı Dikkatinizi Bekliyor!</strong>
            <span>
                @if (criticalCount > 0)
                {
                    <text>@criticalCount kritik seviyede,&nbsp;</text>
                }
                @if (lowStockCount > 0)
                {
                    <text>@lowStockCount düşük seviyede ürün bulunuyor.</text>
                }
            </span>
        </div>
    </div>
}

<div class="stat-grid">
    <div class="stat-card stat-accent">
        <div class="stat-icon">📦</div>
        <div>
            <div class="stat-value">@totalProducts</div>
            <div class="stat-label">Toplam Ürün</div>
        </div>
    </div>
    @* Madde 4: "Stok İzlenen" kartı açıklayıcı alt metinle *@
    <div class="stat-card stat-green">
        <div class="stat-icon">📊</div>
        <div>
            <div class="stat-value">@trackedProducts</div>
            <div class="stat-label">Stok İzlenen</div>
            <div class="stat-sublabel">Sistemdeki @totalProducts ürünün @trackedProducts kadarı izleniyor</div>
        </div>
    </div>
    <div class="stat-card stat-amber">
        <div class="stat-icon">⚡</div>
        <div>
            <div class="stat-value">@lowStockCount</div>
            <div class="stat-label">Düşük Stok</div>
        </div>
    </div>
    <div class="stat-card stat-red">
        <div class="stat-icon">🚨</div>
        <div>
            <div class="stat-value">@criticalCount</div>
            <div class="stat-label">Kritik Stok</div>
        </div>
    </div>
</div>

<div class="filter-bar">
    <input type="text" id="searchInput" class="filter-input wide"
           placeholder="🔍 Ürün adı veya SKU ara…" oninput="StockFilter.apply()" />

    <select id="catFilter" class="filter-input" onchange="StockFilter.apply()">
        <option value="">Tüm Kategoriler</option>
        @foreach (var cat in categories)
        {
            <option value="@cat.CategoryName">@cat.CategoryName</option>
        }
    </select>

    @* Madde 1: Durum filtresinde "Takip Dışı" seçeneği korundu *@
    <select id="statusFilter" class="filter-input" onchange="StockFilter.apply()">
        <option value="">Tüm Durumlar</option>
        <option value="OK">✓ Yeterli</option>
        <option value="Low">⚡ Düşük</option>
        <option value="Critical">🚨 Kritik</option>
        <option value="NotTracked">— Takip Dışı</option>
    </select>

    <div class="filter-spacer"></div>

    @* Madde 1: Takip dışı ürünleri göster / gizle butonu *@
    @if (showAll)
    {
        <a href="/Stock" class="btn btn-toggle-all btn-sm">
            📊 Yalnızca Takiptekileri Göster
        </a>
    }
    else
    {
        <a href="/Stock?showAll=true" class="btn btn-toggle-all btn-sm">
            👁 Takip Dışı Ürünleri de Göster
        </a>
    }

    <button class="btn btn-csv" onclick="StockCsv.export()">
        <svg style="width:16px;height:16px;fill:currentColor" viewBox="0 0 24 24">
            <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" />
        </svg>
        CSV İndir
    </button>
</div>

<div class="acc-wrapper" id="accWrapper">
    @if (!Model.Any())
    {
        <div class="acc-block">
            <div style="text-align:center; padding:3rem; color:var(--text-muted);">
                <div style="font-size:3rem; margin-bottom:1rem; opacity:.5;">📭</div>
                <div>@(showAll ? "Henüz ürün eklenmemiş." : "Stok takibi aktif ürün bulunmuyor. Takip dışı ürünleri görmek için 'Takip Dışı Ürünleri de Göster' butonunu kullanın.")</div>
            </div>
        </div>
    }

    @foreach (var grp in grouped)
    {
        var grpItems = grp.ToList();
        var grpTracked = grpItems.Count(m => m.TrackStock);
        var grpLow = grpItems.Count(m => getStatus(m) == "Low");
        var grpCritical = grpItems.Count(m => getStatus(m) == "Critical");
        var grpOk = grpItems.Count(m => getStatus(m) == "OK");
        var catName = grp.Key?.CategoryName ?? "Kategorisiz";

        @* Madde 2: Kategori sağlık özeti hesapla *@
        string healthLabel;
        string healthClass;
        if (grpTracked == 0)
        {
            healthLabel = "Takip yok";
            healthClass = "health-ok";
        }
        else if (grpCritical > 0)
        {
            healthLabel = $"{grpCritical} Kritik Ürün";
            healthClass = "health-critical";
        }
        else if (grpLow > 0)
        {
            healthLabel = $"{grpLow} Düşük Stok";
            healthClass = "health-warn";
        }
        else
        {
            int pct = grpTracked > 0 ? (int)Math.Round((double)grpOk / grpTracked * 100) : 100;
            healthLabel = $"%{pct} Sağlıklı";
            healthClass = "health-ok";
        }

        <div class="acc-block open" data-cat-name="@catName">
            <div class="acc-header" onclick="StockAccordion.toggle(this)">
                <span class="acc-title">@catName</span>
                <div class="acc-meta">
                    <span class="pill pill-indigo">@grpItems.Count ürün</span>
                    @* Madde 2: Sağlık özeti *@
                    <span class="acc-health @healthClass">@healthLabel</span>
                    @if (grpLow > 0)
                    {
                        <span class="pill pill-amber">@grpLow düşük</span>
                    }
                    @if (grpCritical > 0)
                    {
                        <span class="pill pill-red">@grpCritical kritik</span>
                    }
                </div>
                <span class="acc-chevron">▼</span>
            </div>

            <div class="acc-body">
                <table class="ros-table">
                    <thead>
                        <tr>
                            @* Madde 2: SKU Tooltip *@
                            <th class="sku-th" data-tooltip="SKU (Stok Tutma Birimi), ürüne ait benzersiz barkod veya koddur">
                                Ürün / SKU ⓘ
                            </th>
                            <th>Güncel Stok</th>
                            <th>Uyarı / Kritik Eşik</th>
                            <th>Durum</th>
                            <th>Trend</th>
                            <th>Son Güncelleme</th>
                            <th style="text-align:center;">Takip</th>
                            <th style="text-align:right;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in grpItems)
                        {
                            var st = getStatus(item);
                            var pill = getPillClass(st);
                            var stLabel = getStatusLabel(st);
                            var sku = $"SKU-{item.MenuItemId:D4}";
                            var spark = sparklineMap.TryGetValue(item.MenuItemId, out var sv) ? sv : new List<int> { item.StockQuantity };
                            var lastUpd = lastUpdatedMap.TryGetValue(item.MenuItemId, out var lu) ? lu : item.MenuItemCreatedTime;
                            var consumed = consumedMap.TryGetValue(item.MenuItemId, out var cv) ? cv : 0;
                            var sparkJson = System.Text.Json.JsonSerializer.Serialize(spark);

                            <tr class="stock-row"
                                data-id="@item.MenuItemId"
                                data-name="@item.MenuItemName.ToLower()"
                                data-sku="@sku.ToLower()"
                                data-cat="@catName"
                                data-status="@st"
                                data-consumed="@consumed"
                                data-qty="@item.StockQuantity">

                                <td>
                                    <div style="font-weight:600; font-size:.95rem;">@item.MenuItemName</div>
                                    <div style="font-size:.75rem; color:var(--text-muted); margin-top:.2rem;">@sku</div>
                                </td>
                                <td>
                                    <strong id="qty-@item.MenuItemId" style="font-size:1.1rem;">@item.StockQuantity</strong>
                                </td>
                                <td style="color:var(--text-muted);">
                                    @* Madde 3: İkili eşik göster *@
                                    <span title="Uyarı eşiği">
                                        ⚡ <span id="thresh-@item.MenuItemId">@item.AlertThreshold</span>
                                    </span>
                                    &nbsp;/&nbsp;
                                    <span title="Kritik eşik">
                                        🚨 <span id="crit-@item.MenuItemId">@item.CriticalThreshold</span>
                                    </span>
                                </td>
                                <td>
                                    <span id="status-@item.MenuItemId" class="pill @pill">@stLabel</span>
                                </td>
                                <td>
                                    <canvas class="sparkline" width="80" height="30"
                                            data-vals="@sparkJson" title="Son 5 hareket trendi"></canvas>
                                </td>
                                <td style="font-size:.8rem; color:var(--text-muted);">@lastUpd.ToString("dd.MM.yy HH:mm")</td>
                                <td style="text-align:center;">
                                    <label class="toggle-switch" title="@(item.TrackStock ? "Takip açık" : "Takip kapalı")">
                                        <input type="checkbox" class="track-toggle" data-id="@item.MenuItemId" @(item.TrackStock ? "checked" : "") />
                                        <span class="toggle-slider"></span>
                                    </label>
                                </td>
                                <td style="text-align:right;">
                                    <div style="display:flex; gap:.5rem; justify-content:flex-end;">
                                        @* DÜZELTME 1: Düzgün kapatılmış .Replace() kullanımı *@
                                        <button class="btn btn-edit btn-sm"
                                                onclick="StockUpdateModal.open(@item.MenuItemId, '@Html.Raw(item.MenuItemName.Replace("\\", "\\\\").Replace("'", "\\'"))', '@sku', @item.StockQuantity, @item.AlertThreshold, @item.CriticalThreshold)">
                                            ✏️ Güncelle
                                        </button>
                                        <button class="btn btn-detail btn-sm" onclick="StockHistoryModal.open(@item.MenuItemId)">
                                            📋 Geçmiş
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

